{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build SFML",
            "type": "shell",
            "command": "clang++",
            "args": [
                "-std=c++17",
                "-g", 
                "${workspaceFolder}/*.cpp", 
                "-o", 
                "${workspaceFolder}/jogo_simas", 
                
                "-I/opt/homebrew/opt/sfml/include", 
                "-L/opt/homebrew/opt/sfml/lib",    
                "-lsfml-graphics",
                "-lsfml-window",
                "-lsfml-system"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}